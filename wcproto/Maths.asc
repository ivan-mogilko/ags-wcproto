//
// Additional Maths functions.
//
//-----------------------------------------------------------------------------

float abs(float n) {
  if (n < 0.0) return -n;
  return n;
}

float sgn(float n) {
  if (abs(n) < 0.00001) return 0.0;
  return n / abs(n);
}

float rnd(int lim) {
  return IntToFloat(Random(lim * 2) - lim);
}
